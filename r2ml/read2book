#保存执行结果到文件中
sink("结果文件名", append=TRUE/FALSE,split=TRUE/FALSE)
数值，字符，逻辑型
向量，矩阵，数组，数据框，列表
# a是长度为30的向量
a<- matrx(a, nrow=5, ncol=6, byrow=False, dimnames=list(dim1,dim2))
scan(file,skip,what=func())

